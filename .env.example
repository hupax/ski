# ==================== 数据库配置 ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=skiuo
POSTGRES_USER=skiuo
POSTGRES_PASSWORD=your_postgres_password

# ==================== 存储配置 ====================
# 存储类型选择: minio | oss | cos (推荐使用cos，国内部署首选)
STORAGE_TYPE=cos

# MinIO配置 (当STORAGE_TYPE=minio时使用，自建存储)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=skiuo-videos
MINIO_PRESIGNED_URL_EXPIRY=3600

# 阿里云OSS配置 (当STORAGE_TYPE=oss时使用)
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET_NAME=your_oss_bucket_name
OSS_REGION=cn-hangzhou

# 腾讯云COS配置 (当STORAGE_TYPE=cos时使用，推荐)
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
COS_REGION=ap-beijing
COS_BUCKET_NAME=your_cos_bucket_name

# ==================== AI API配置 ====================
# Qwen API（通义千问）
QWEN_API_KEY=your_qwen_api_key
QWEN_API_ENDPOINT=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-vl-max

# Gemini API（Google）
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-pro

# ==================== gRPC配置 ====================
GRPC_AI_SERVICE_HOST=localhost
GRPC_AI_SERVICE_PORT=50051

# ==================== 应用配置 ====================
# core-service
CORE_SERVICE_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# ai-service
AI_SERVICE_PORT=50051
AI_SERVICE_WORKERS=4

# ==================== 视频处理配置 ====================
# 滑动窗口参数
VIDEO_WINDOW_SIZE=15
VIDEO_WINDOW_STEP=10

# 临时文件路径
TEMP_VIDEO_PATH=/tmp/skiuo

# ==================== AI 提示词配置 ====================
# 提示词语言: zh (中文) | en (英文)
PROMPT_LANGUAGE=zh

# 应用场景: programming (编程) | crafts (手工) | teaching (教学) | general (通用)
PROMPT_SCENARIO=general

# 是否在提示词中包含场景特定提示
PROMPT_INCLUDE_SCENARIO_HINT=true

# ==================== 其他配置 ====================
# 日志级别
LOG_LEVEL=INFO

# 是否开启调试模式
DEBUG_MODE=false
